# 服务器配置
PORT=53300
NODE_ENV=development

# 数据库配置
# 可选值: sqlite 或 postgresql
DB_TYPE=sqlite

# SQLite 配置
SQLITE_PATH=./data/carnote.db
# 数据库备份目录 (如果未指定，SQLite 会默认备份在数据库文件所在目录)
BACKUP_PATH=./data/backups

# PostgreSQL 配置 (当 DB_TYPE=postgresql 时使用)
PG_HOST=localhost
PG_PORT=5432
PG_DATABASE=carnote
PG_USER=postgres
PG_PASSWORD=password

# 上传文件存储路径
UPLOAD_PATH=./uploads

# JWT 密钥 (用于会话令牌)
JWT_SECRET=your-secret-key-change-this-in-production

# CORS 允许的前端地址
CORS_ORIGIN=http://localhost:53300
